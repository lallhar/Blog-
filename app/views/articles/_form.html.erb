
<% if @article.errors.any? %>

 <div class="row">
 	<div class="col-xs-4 offset-md-2">
 		<div class="card style="width: 20rem";>
 			<div class="card-body">
 				<h6 class="card-title ">
 					<%= pluralize(@article.errors.count, "error") %>
 					Prohibited this article from being saved:
 				<h2>
 					<div class="card-body">
 						<ul>
 							<% @article.errors.full_messages.each do |msg| %>
								<li>
									<%= msg %>		
								</li>	
									<% end %>
 						</ul>
 					</div>
 				</h2>
 				</h5>
 			</div>
 		</div>
 	</div>
 </div>
<% end %>

<div class="row">
	<div class="col-md-12">

		<%= form_for(@article, :html => { class: "form-horizantal", role: "form"}) do |f| %>



		<div class="form-group row">
			   <%= f.label :title, class: "col-sm-2" %> 
			    <div class="col-sm-10">
			      <%= f.text_field :title, class: "form-control" %>
			    </div>
			</div>  
			  <div class="form-group row">
			    <%= f.label :description, class: "col-sm-2" %> 
			    <div class="col-sm-10">
			      <%= f.text_area :description, rows: 12, class: "form-control" %>
			    </div>
  		</div>



			
				
				
			

			
				
				
			

			 <div class="form-group row">
    <div class="col-sm-10 offset-md-2">
				<%= f.submit class: "btn btn-primary" %>
			</div>
		</div>

		<% end %>

		<div class="col-md-4 offset-md-4">

			[ <%= link_to "Cancel and go back to the Article", articles_path %> ]

		</div>
	</div>
</div>
