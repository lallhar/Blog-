<h2 align="center"> Title: <%= @article.title %> </h2>	

<div class="card col-xs-8 offset-xs-2">
	<% if @article.user %>
		<ul class="listing">
			<div class="row center">
				<div class="col-md-5 offset-md-5">
					<li> created by: </li>
					<li><%= link_to gravatar_for(@article.user),user_path(@article.user) %></li>
					<li class="article-title">
						<%= link_to @article.user.username, user_path(@article.user) %>
					</li>
					<li>
						<small><%= pluralize(@article.user.articles.count, "article") if 
								   @article.user.articles %>			
						</small>
					</li>
				</div>
			</div>
		</ul>
	<% end %>
	<h4 class="center description"><strong> Description </strong></h4>
	<hr>
	
	<%= simple_format(@article.description) %>

	<div class="article-actions">
		<%= link_to "edit article", edit_article_path(@article), class: "btn btn-sm btn-primary" %> 
		<%= link_to "Delete this article?", article_path(@article),
			 method: :delete, data: { confirm: "Are you you want to delete this article?"},
			class: "btn btn-sm btn-danger" %>
		<%= link_to "view all the articles", articles_path, class: "btn btn-sm btn-success" %>
	</div>

</div>
 