<h1 align="center">Below are the all articles.</h1>


<% @articles.each do |article| %>

	<div class="row">
		<div class="col-lg-8 offset-lg-2 mb-3">
			<div class="card "> 
				<div class="card-body">
				<div class="article-title">
		 			<%= link_to article.title, article_path(article) %> 
				</div>
			<div class="article-body">
				<%= truncate(article.description, length: 100 ) %>
			</div>
			<div class="article-actions">
				<%= link_to "edit article", edit_article_path(article), class: "btn btn-sm btn-primary" %> 
				<%= link_to "Delete this article?", article_path(article),
							 method: :delete, data: { confirm: "Are you you want to delete this article?"},
								class: "btn btn-sm btn-danger" %>
			</div>
		</div>
		</div>
	</div>
</div>

<% end %>

